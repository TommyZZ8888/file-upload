{
  "compilerOptions": {
    "baseUrl": ".", // 确保添加了 baseUrl
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true, // 如果之前没有，请添加此行
    "skipLibCheck": true,
    "types": ["vite/client"],
    "moduleResolution": "node",
  },
  "files": ["src/**/*"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
